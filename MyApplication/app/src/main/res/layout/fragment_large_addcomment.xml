<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Nom de l'Ã©tablissement"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:id="@+id/titre_nom_etab"
            android:textSize="30dp"
            android:background="@color/gris_clair"/>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/nom_etab"
            android:textSize="25dp"
            android:background="@color/white"
            android:textCursorDrawable="@null"
            android:textColor="@color/findUTC"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Commentaire"
            android:id="@+id/titre_commentaire"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:background="@color/gris_clair"/>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:id="@+id/commentaire"
            android:textSize="25dp"
            android:background="@color/white"
            android:textCursorDrawable="@null"
            android:textColor="@color/findUTC" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Votre avis"
            android:id="@+id/titre_avis"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:background="@color/gris_clair"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Avis"
            android:id="@+id/avis"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Login"
            android:id="@+id/titre_login"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:background="@color/gris_clair"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/login"
            android:textSize="25dp"
            android:background="@color/white"
            android:textCursorDrawable="@null"
            android:textColor="@color/findUTC" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/texte_avis"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:background="@color/gris_clair"/>

    </LinearLayout>

</ScrollView>