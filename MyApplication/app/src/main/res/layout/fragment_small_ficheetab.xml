<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3E8E55"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/name"
            android:text="name"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/nameCategory"
            android:text="nameCategory"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/rating"
            android:text="rating"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/ic_adresse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_adresse" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:id="@+id/textAdresse"
                android:text="Pas d'adresse disponible."
                android:textSize="15dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:id="@+id/textPhone"
                android:text="Pas de numéro de téléphone disponible."
                android:textSize="15dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/llHours">

            <ImageView
                android:id="@+id/ic_horaires"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_horaires" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:id="@+id/textHoraires"
                android:text="Pas d'horaires disponibles."
                android:textSize="15dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Description"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@color/findUTC"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/textDescription"
        android:text="Pas de description disponible"
        android:textSize="15dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Voir les avis"
        android:id="@+id/voir_avis"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:background="@color/findUTC"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Rédiger un avis"
        android:id="@+id/rediger_avis"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:background="@color/findUTC"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Voir sur la carte"
        android:id="@+id/voir_carte"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:background="@color/findUTC"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>

</LinearLayout>